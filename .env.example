# =============================================================================
# Archivematica Environment Variables
# =============================================================================
# Generate secrets with:
#   python3 -c "import secrets; print(secrets.token_urlsafe(50))"
#   openssl rand -base64 32 | tr -d '=+/'
# =============================================================================

# Django secret key (MUST be randomly generated)
DJANGO_SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY

# MySQL credentials (MUST be randomly generated)
MYSQL_ROOT_PASSWORD=REPLACE_WITH_GENERATED_PASSWORD
MYSQL_USER=archivematica
MYSQL_PASSWORD=REPLACE_WITH_DIFFERENT_GENERATED_PASSWORD

# Elasticsearch heap size
ES_HEAP_SIZE=512m

# Search enabled
AM_SEARCH_ENABLED=true

# ClamAV limits (in MB, without unit suffix)
CLAMAV_MAX_FILE_SIZE_MB=42
CLAMAV_MAX_SCAN_SIZE_MB=42
CLAMAV_MAX_STREAM_LENGTH_MB=100

# Gunicorn workers (2 x CPU cores + 1)
AM_GUNICORN_WORKERS=4
SS_GUNICORN_WORKERS=4

# Request timeout in seconds (172800 = 48 hours)
AM_GUNICORN_TIMEOUT=172800
SS_GUNICORN_TIMEOUT=172800

# Debug
AM_CAPTURE_CLIENT_SCRIPT_OUTPUT=true