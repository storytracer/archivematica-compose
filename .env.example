# =============================================================================
# Archivematica Environment Variables
# =============================================================================
# Copy this file to .env and replace placeholder values with secure secrets.
#
# Generate secrets with:
#   python3 -c "import secrets; print(secrets.token_urlsafe(50))"
#   openssl rand -base64 32 | tr -d '=+/'
# =============================================================================

# Django secret keys (MUST be unique, randomly generated)
DJANGO_SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY
SS_DJANGO_SECRET_KEY=REPLACE_WITH_DIFFERENT_GENERATED_SECRET_KEY

# MySQL credentials (MUST be randomly generated)
MYSQL_ROOT_PASSWORD=REPLACE_WITH_GENERATED_PASSWORD
MYSQL_USER=archivematica
MYSQL_PASSWORD=REPLACE_WITH_DIFFERENT_GENERATED_PASSWORD

# Allowed hosts (set to your domain in production)
DJANGO_ALLOWED_HOSTS=*

# Elasticsearch
ES_HEAP_SIZE=1g
AM_SEARCH_ENABLED=true

# ClamAV file size limits
CLAMAV_MAX_FILE_SIZE=2000M
CLAMAV_MAX_SCAN_SIZE=2000M
CLAMAV_MAX_STREAM_LENGTH=2000M

# Gunicorn workers (adjust based on CPU cores: 2 x cores + 1)
AM_GUNICORN_WORKERS=4
SS_GUNICORN_WORKERS=4

# Request timeout in seconds (172800 = 48 hours, needed for large files)
AM_GUNICORN_TIMEOUT=172800
SS_GUNICORN_TIMEOUT=172800

# Debug options
AM_CAPTURE_CLIENT_SCRIPT_OUTPUT=true